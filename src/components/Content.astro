---
import Page1 from "../components/Page1.astro";
import Page2 from "../components/Page2.astro";
import Layout from "../layouts/Layout.astro";
let {option, title} = Astro.props;
function getComp(id) [
        switch (id) {
        case "m1":
            <Page1 />;
            break;
        case "m2":
            <Page2 />;
            break;
        case "m3":
            <Page3 />;
            break;
        default:
            "Select a page from the menu.";
        };
    ];
const comp = getComp(option);
---
<Layout optionid={option}>
    <div class="container">
        <div class="heading center">{title}</div>
        <p class="just">Literary works to discover ...</p>
        <p class="just">Different genres</p>
        <slot name={comp}/>
    </div>
</Layout>
