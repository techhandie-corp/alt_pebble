---
const {title, menuId} = Astro.props;
---

<navbar id="nav">
    <ul>
        <li>
          <a id="m1" href="/Page1" onclick("menuId")>Option 1</a>
        </li>
        <li>
          <a id="m2" href="/Page2" onclick("menuId")>Option 2</a>
        </li>
        <li>
          <a id="m3" href="/Page3" onclick("menuId")>Option 3</a>
        </li>
    </ul>    
</navbar>

<script>
  
  const menuoptions = ["m1","m2","m3"];
  var menuId = function getId() {
    menuoptions.forEach((opt) => {
      let idMark: any = document.getElementById(opt);
      idMark.addEventListener("click", (event) => {
      let targetid = event.target.id;
      let menuid = targetid;
      return menuid;
      });
    });
  };
</script>


<style>

  navbar#nav {
    background-color: yellow;
    height: 100px;
  }

  navbar ul {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-around;
    align-items: center;
  }

  a {
    text-decoration: none;
    color: crimson;
  }

  li {
    list-style: none;
  }

  #m1, #m2, #m3 {
    font-style: oblique;
  }

</style>